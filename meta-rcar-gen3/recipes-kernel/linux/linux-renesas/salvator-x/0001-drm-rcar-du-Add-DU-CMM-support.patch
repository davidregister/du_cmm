+int rcar_du_cmm_hgo_get(struct drm_device *dev, void *data,
+			struct drm_file *file_priv)
+{
+	struct rcar_du_cmm_table *table = (struct rcar_du_cmm_table *)data;
+	struct rcar_du_cmm_file_priv *fpriv = file_priv->driver_priv;
+	struct rcar_du_cmm *du_cmm;
+	int ret = 0;
+	struct rcar_du_cmm_pending_event *p[2];
+	struct drm_gem_object *gem_obj;
+
+	du_cmm = id_to_cmm(dev, table->crtc_id);
+	if (du_cmm == NULL)
+		return -EINVAL;
+
+	if (table->buff_len < (CMM_HGO_NUM * 4 * 3))
+		return -EINVAL;
+
+	gem_obj = drm_gem_object_lookup(file_priv, table->buff);
+	if (!gem_obj)
+		return -ENOMEM;
+
+	p[0] = kzalloc(sizeof(*p), GFP_KERNEL);
+	if (p[0] == NULL) {
+		ret = -ENOMEM;
+		goto error_alloc1;
+	}
+
+	p[1] = kzalloc(sizeof(*p), GFP_KERNEL);
+	if (p[1] == NULL) {
+		ret = -ENOMEM;
+		goto error_alloc2;
+	}
+
+	/* histogram read start event */
+	p[0]->gem_obj = NULL;
+	p[0]->event = CMM_EVENT_HGO_START;
+	p[0]->stat = QUE_STAT_PENDEING;
+	p[0]->callback_data = table->user_data;
+	p[0]->du_cmm = du_cmm;
+	p[0]->fpriv = fpriv;
+
+	/* histogram read end event */
+	p[1]->gem_obj = gem_obj;
+	p[1]->event = CMM_EVENT_HGO_DONE;
+	p[1]->stat = QUE_STAT_PENDEING;
+	p[1]->callback_data = table->user_data;
+	p[1]->du_cmm = du_cmm;
+	p[1]->fpriv = fpriv;
+
+	mutex_lock(&cmm_event_lock);
+
+	list_add_tail(&p[0]->link, &du_cmm->hgo.list);
+	list_add_tail(&p[0]->fpriv_link, &fpriv->list);
+
+	list_add_tail(&p[1]->link, &du_cmm->hgo.list);
+	list_add_tail(&p[1]->fpriv_link, &fpriv->list);
+
+	mutex_unlock(&cmm_event_lock);
+
+	/* start DU Vsync interrupt */
+	drm_crtc_vblank_get(&du_cmm->rcrtc->crtc);
+	drm_crtc_vblank_get(&du_cmm->rcrtc->crtc);
+
+	return 0;
+
+error_alloc2:
+	kfree(p[0]);
+error_alloc1:
+	drm_gem_object_unreference_unlocked(gem_obj);
+
+	return ret;
+}
