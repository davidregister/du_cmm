+static inline void event_prev_cancel_locked(struct cmm_module_t *module)
+{
+	struct rcar_du_cmm_pending_event *p = module->p;
+
+	if (p == NULL)
+		return;
+
+	module->p = NULL;
+
+	_event_done_locked(p);
+}
