+int rcar_du_cmm_alloc(struct drm_device *dev, void *data,
+		      struct drm_file *file_priv)
+{
+	struct rcar_du_cmm_buf *buf = (struct rcar_du_cmm_buf *)data;
+	struct drm_gem_cma_object *cma_obj;
+	struct drm_gem_object *gem_obj;
+	u32 handle;
+	u64 offset;
+	int ret = 0;
+
+	buf->handle = 0;
+
+	/* create buffer */
+	cma_obj = drm_gem_cma_create(dev, buf->size);
+	if (IS_ERR(cma_obj))
+		return -ENOMEM;
+
+	gem_obj = &cma_obj->base;
+
+	ret = drm_gem_handle_create(file_priv, gem_obj, &handle);
+	if (ret) {
+		dev->driver->gem_free_object(gem_obj);
+		return -ENOMEM;
+	}
+
+	drm_gem_object_unreference_unlocked(gem_obj);
+
+	ret = drm_gem_cma_dumb_map_offset(file_priv, dev, handle, &offset);
+
+	/* set return value */
+	buf->handle = handle;
+	buf->mmap_offset = offset;
+	buf->phy_addr = cma_obj->paddr;
+
+	return ret;
+}
