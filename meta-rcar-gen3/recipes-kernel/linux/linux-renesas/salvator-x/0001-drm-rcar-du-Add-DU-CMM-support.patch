+static inline void lc_event_done(struct cmm_module_t *module,
+			       struct rcar_du_cmm_pending_event *p,
+			       bool done)
+{
+	/* vblank is put */
+
+	mutex_lock(&cmm_event_lock);
+
+	if (!done && list_empty(&module->list))
+		module->p = p;
+	else
+		_event_done_locked(p);
+
+	mutex_unlock(&cmm_event_lock);
+}
